<Window x:Class="TestScriptGeneratorTool.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Settings" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="AI Generation Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Provider Selection -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="LLM Provider:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ProviderComboBox" Height="30" Padding="10,5" SelectionChanged="ProviderComboBox_SelectionChanged"/>

        <!-- Model -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Model:" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="ModelTextBox" Height="30" Padding="10,5" Margin="0,10,0,0"/>

        <!-- Base URL -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Base URL:" VerticalAlignment="Top" Margin="0,15,10,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="BaseUrlTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Padding="10,5" Margin="0,10,0,0" VerticalAlignment="Top"/>

        <!-- API Key -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="API Key:" VerticalAlignment="Center" Margin="0,15,10,0"/>
        <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="ApiKeyPasswordBox" Height="30" Padding="10,5" Margin="0,10,0,0"/>

        <!-- Temperature -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Temperature:" VerticalAlignment="Center" Margin="0,15,10,0"/>
        <Grid Grid.Row="5" Grid.Column="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Slider Grid.Column="0" x:Name="TemperatureSlider" Minimum="0" Maximum="1" Value="0.2" Height="24"/>
            <TextBlock Grid.Column="1" x:Name="TemperatureValueBlock" Text="0.2" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </Grid>

        <!-- Max Retries -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Max Retries:" VerticalAlignment="Center" Margin="0,15,10,0"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="MaxRetriesTextBox" Height="30" Padding="10,5" Margin="0,10,0,0" Text="3"/>

        <!-- Max Tokens -->
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Max Tokens:" VerticalAlignment="Center" Margin="0,15,10,0"/>
        <TextBox Grid.Row="7" Grid.Column="1" x:Name="MaxTokensTextBox" Height="30" Padding="10,5" Margin="0,10,0,0" Text="4000"/>

        <!-- Status -->
        <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" x:Name="StatusTextBlock" Text="Ready" Foreground="#666" Margin="0,15,0,0" FontSize="10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="TestConnectionButton" Content="Test Connection" Width="130" Height="36" Margin="0,0,10,0" Background="#FF9800" Foreground="White" FontWeight="Bold" Click="TestConnectionButton_Click"/>
            <Button x:Name="SaveButton" Content="Save" Width="100" Height="36" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="36" Background="#9E9E9E" Foreground="White" FontWeight="Bold" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
