<Window x:Class="TestScriptGeneratorTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestScriptGeneratorTool"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Test Automation Script Generator" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="10" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="URL:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="UrlTextBox" Width="400" Height="30" Margin="0,0,10,0" Padding="5"/>
                <Button x:Name="NavigateButton" Content="Navigate" Width="80" Height="30" Margin="0,0,20,0" Click="NavigateButton_Click"/>
                
                <Separator Width="1" Background="#CCC" Margin="0,5,20,5"/>
                
                <Button x:Name="SelectElementButton" Content="Select Element" Width="100" Height="30" Margin="0,0,10,0" Click="SelectElementButton_Click"/>
                <Button x:Name="ClearSelectionButton" Content="Clear" Width="70" Height="30" Margin="0,0,20,0" Click="ClearSelectionButton_Click"/>
                
                <TextBlock x:Name="StatusTextBlock" VerticalAlignment="Center" Foreground="#666" Margin="0,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Left: WebView2 -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <wv2:WebView2 x:Name="WebView" Margin="0"/>
            </Border>

            <!-- Middle: Selection and Locator Panel -->
            <Border Grid.Column="1" Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="1,0,1,0">
                <TabControl>
                    <!-- Selected Elements Tab -->
                    <TabItem Header="Elements" Padding="10,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#E8E8E8" Padding="10" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                                <TextBlock Text="Selected Elements" FontWeight="Bold" FontSize="11"/>
                            </Border>

                            <ScrollViewer Grid.Row="1" Padding="10">
                                <StackPanel x:Name="SelectionPanel" Orientation="Vertical"/>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <!-- Locator Tab -->
                    <TabItem Header="Locator" Padding="10,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#E8E8E8" Padding="10" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                                <TextBlock Text="Locator Definition" FontWeight="Bold" FontSize="11"/>
                            </Border>

                            <ScrollViewer Grid.Row="1" Padding="10">
                                <StackPanel x:Name="LocatorPanel" Orientation="Vertical"/>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Right: Step Builder and Scenario Panel -->
            <Grid Grid.Column="2" Background="#FAFAFA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Step Builder -->
                <Border Grid.Row="0" Background="#E8E8E8" Padding="10" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Step Builder" FontWeight="Bold" FontSize="12" Margin="0,0,0,8"/>

                        <!-- Action Type Dropdown -->
                        <Grid Grid.Row="1" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Action:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="10"/>
                            <ComboBox Grid.Column="1" x:Name="ActionTypeComboBox" Height="24" FontSize="10"/>
                        </Grid>

                        <!-- Input Value -->
                        <Grid Grid.Row="2" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Value:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="10"/>
                            <TextBox Grid.Column="1" x:Name="InputValueTextBox" Height="24" Padding="3" FontSize="10" />
                        </Grid>

                        <!-- Add Step Button -->
                        <Button Grid.Row="3" x:Name="AddStepButton" Content="Add Step" Height="28" Background="#4CAF50" Foreground="White" FontWeight="Bold" FontSize="10" Click="AddStepButton_Click"/>
                    </Grid>
                </Border>

                <!-- Step List -->
                <ScrollViewer Grid.Row="1" Padding="10">
                    <StackPanel x:Name="StepsPanel" Orientation="Vertical"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
